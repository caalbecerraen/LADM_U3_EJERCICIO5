<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="20dp">
///////////////////////////////Descripcion del evento
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descricpion" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="DescripciÃ³n"
        android:id="@+id/evtDes"
        android:inputType="textImeMultiLine"
        />
    ///////////////////////////////Hora
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hora:" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="00:00"
        android:inputType="time"
        android:id="@+id/evtHour"
        />
    ///////////////////////////////Fecha
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha:" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="dd/mm/yyyy"
        android:inputType="date"
        android:id="@+id/evtFecha"
        />
    ///////////////////////////////Lugar
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lugar:" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Somewhere Over The Rainbow"
        android:id="@+id/evtLugar"
        />
    ///////////////////////////////BOTONES
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insertar"
        android:id="@+id/btnInser"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sincronizemos"
        android:id="@+id/btnSinc"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Lista"/>

    //Lugar Hora Fecha Descripcion
</LinearLayout>